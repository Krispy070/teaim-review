function ProjectWizardPage(){
  const { orgId, setProjectId } = useOrg()
  return <ProjectWizard 
    orgId={orgId} 
    onComplete={(projectId) => {
      setProjectId(projectId)
      // Could redirect to dashboard or project view
      window.location.href = '/dashboard'
    }} 
  />
}